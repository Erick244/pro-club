generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id            Int            @id @default(autoincrement())
    name          String
    email         String         @unique
    password      String?
    oauth         Boolean        @default(false)
    oauthProvider OAuthProvider?
    country       String?
    biography     String?
    usersWithLike User[]         @relation("UserLikes")
    likeBy        User[]         @relation("UserLikes")
    roles         UserRoles[]    @default([user])
    profile       UserProfile?   @relation(fields: [userProfileId], references: [id])
    userProfileId Int?
}

enum OAuthProvider {
    Google
    Facebook
    Reddit
    Discord
}

enum UserRoles {
    user
    admin
    owner
}

model UserProfile {
    id                  Int          @id @default(autoincrement())
    User                User[]
    likes               Int          @default(0)
    color               String
    availableTimeToPlay String
    profileImageUrl     String
    socialMedias        Json
    gamingSetup         Json
    gamesConfig         GameConfig[]
}

model GameConfig {
    id            Int          @id @default(autoincrement())
    config        Json
    game          Game         @relation(fields: [gameId], references: [id])
    gameId        Int
    UserProfile   UserProfile? @relation(fields: [userProfileId], references: [id])
    userProfileId Int?
}

model Game {
    id           Int            @id @default(autoincrement())
    name         String         @unique
    distributor  String         @unique
    capeImageUrl String
    platforms    GamePlatform[]
    GameConfig   GameConfig[]
}

enum GamePlatform {
    PC
    Console
    Portable
    Mobile
    Browser
}
